{% extends "admin/layoutadmin.html.twig" %}{# Ce template s'inserera dans base.html.twig #}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <h1>Bienvenue sur la liste des produits, bande de gredins !</h1>

    <ul>
        {% for product in products %}
            <li>
                {{ product.name }}
                {% for tag in product.tags %}
                    <a href="{{ path('list_product_by_tag', {name: tag.name}) }}">#{{ tag.name}}</a>
                {% endfor %}  
            </li>    
        {% endfor %}
    </ul>
{% endblock %}